function p_plus1(c){
	//Lagerbestand wird hoch gezählt
	myElement = document.getElementById('l1');
	if(myElement != null)
	{
		p = myElement.innerHTML.split("/");
		start = parseInt(p[0]);
		m1 = start;
		max = parseInt(p[1]);
		prod = myElement.title/3600;
		if(start != max)
		{
			setTimeout("p_plus1(0)", 1/prod*1000);
			if(c == 0){myElement.innerHTML=start+1 + "/" + max;}
		}
	}
}

