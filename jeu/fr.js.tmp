function t_plus(){
	for(i=1;; i++) {
		myElement = document.getElementById("tp" + i);
		if(myElement != null)
		{
			sek = t_format1(myElement);
			sek += 1;
			if (sek < 0){document.location.reload();}
			/* self.location.href=self.location.href;*/
			else{sek = t_format2(sek); myElement.innerHTML=sek;}
		}
		else break;
	}
	setTimeout("t_plus()", 1000);
}

function t_minus(){
	//Zeit wird herunter gezählt
	for(i=1;; i++) {
		myElement = document.getElementById("timer" + i);
		if(myElement != null)
		{
			sek = t_format1(myElement);
			sek -= 1;
			if (sek < 0){document.location.reload();}
			else{sek = t_format2(sek); myElement.innerHTML=sek;}
		}
		else break;
	}
	setTimeout("t_minus()", 1000);
}


function t_format1(myElement) {
	//00:01:30 wird zu 90s umformatiert
	p = myElement.innerHTML.split(":");
	stunden = p[0];
	minuten =  p[1];
	sekunden = p[2];
	sek = stunden*3600+minuten*60+sekunden*1;
	return sek;
}

function t_format2(s) {
	//90s wird zu 00:01:30 umformatiert
	if(s > -1)
	{
		stunden = Math.floor(s/3600);
		minuten = Math.floor(s/60) % 60;
		sekunden = s % 60;
		t = stunden + ":";
		if(minuten < 10){t += "0";}
			t += minuten + ":";
		if(sekunden < 10){t += "0";}
			t += sekunden;
	}
	else
	{
		t = "0:00:0?";
	}
	return t;
}

